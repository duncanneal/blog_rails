<nav class="top-bar" data-topbar role="navigation" data-options="is_hover: false" data-options="dropdown_autoclose: false">
    
<div class="row">
  <div class="large-12 column">
    <table>
      <thead>
        <tr>
          <th width="200">Title</th>
          <th>Author</th>
          <th>Date</th>
          <th>Tag</th>
          <th>Body</th>
          <th colspan="3"></th>
        </tr>
      </thead>
</nav>
      <tbody>
        <% @posts.each do |post| %>
        <tr>
          <td><%= post.title %></td>
          <td><%= post.author %></td>
          <td><%= post.date %></td>
          <td><%= post.all_tag %></td>
          <td><%= post.body %></td>
          <td><%= link_to 'Show', post, class: "button round tiny" %></td>
          <td><%= link_to 'Edit', edit_post_path(post), class: "button radius tiny" %></td>
          <td><%= link_to 'Destroy', post, method: :delete, data: {confirm: 'Are you sure?'}, class: "alert button round tiny" %></td>
          <% end %>
        </tr>
      </tbody>
    </table>
  </div>
</div>
