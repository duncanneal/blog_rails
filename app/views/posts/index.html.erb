<title>
<h1>Read some posts</h1>
</title>
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <table>
    <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Date</th>
      <th>Body</th>
      <th colspan="2"></th>
    </tr>
    </thead>

<table>
    <tbody>
    <% @posts.each do |post| %>
        <tr>
          <td><%= post.title %></td>
          <td><%= post.author %></td>
          <td><%= post.date %></td>
          <td><%= post.body %></td>
          <td><%= link_to 'Show', post %></td>
          <td><%= link_to 'Edit', edit_post_path(post) %></td>
          <td><%= link_to 'Destroy', post, method: :delete, data: {confirm: 'Are you sure?'} %></td>
        </tr>
    <% end %>
    </tbody>
  </table>

  
<%= link_to 'Home', root_path, class: "button secondary small" %> 
<%= link_to 'New Post', new_post_path, class: "button secondary small" %>