<p id="notice"><%= notice %></p>

<p>
  <strong>Author:</strong>
  <%= @post.author %>
</p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<%= link_to 'Edit', edit_post_path(@post), class: "button secondary small"  %> 
<%= link_to 'Back', posts_path, class: "button secondary small" %>

<h4>Leave a comment</h4>
<%= form_for [@post, @post.comments.build] do |f| %>
    <div class="field">
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :author_name %>
      <%= f.text_field :author_name %>
    </div>
    <div class="field">
      <%= f.label :author_email %>
      <%= f.text_field :author_email %>
    </div>
    <div class="field">
      <%= f.label :body %><br>
      <%= f.text_area :body %>
    </div>
    <p><%= f.submit "Add comment", class: "button secondary small" %></p>
<% end %>

<div class="container">
  <% @post.comments.each do |comment| %>
      <%= comment.author_name %>
      <%= comment.author_email %>
      <%= comment.body %>
  <% end %>
</div>
