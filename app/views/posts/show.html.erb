<p id="notice"><%= notice %></p>

<p>
  <strong>Author:</strong>
  <%= @post.author %>
</p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

<%= form_for [@post, @post.comments.build] do |f| %>
    <div class="field">
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :author_name %>
      <%= f.text_field :author_name %>
    </div>
    <div class="field">
      <%= f.label :body %><br>
      <%= f.text_area :body %>
    </div>
    <p><%= f.submit "Add comment" %></p>
<% end %>

<table>  
<tbody>
    <% @post.comments.each do |comment| %>
     <tr>
      <td><%= comment.title %></td>
      <td><%= comment.author_name %></td>
      <td><%= comment.body %></td>
    </tr>
 <% end %>
 </tbody>
</table>
