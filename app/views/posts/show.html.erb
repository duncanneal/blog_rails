<p id="notice"><%= notice %></p>
<div class="row">
    <div class="large-12 column">
<p>
  <strong>Author:</strong>
  <%= @post.author %>
</p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<%= link_to 'Edit', edit_post_path, class: "button round secondary small"  %> 
<%= link_to 'Back', posts_path, class: "button round secondary small" %>
<h4>Comment</h4>
<div class="container">
  <% @post.comments.each do |comment| %>
      <%= comment.author_name %>
      <%= comment.author_email %>
      <%= comment.body %>
  <% end %>
</div>


<footer>
    <div class="container">
       <p>&copy; a D2 joint 2015</p>
    </div>
</footer>
