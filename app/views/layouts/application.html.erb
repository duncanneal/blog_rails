    <%= javascript_include_tag "vendor/modernizr" %>
    <%= javascript_include_tag "application", 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
</head>

<header>
Cup o Duncan  
</header>
<nav class="top-bar" data-topbar role="navigation" data-options="is_hover: true" 
<ul class="title-area">
<section class="top-bar-section">
    <ul class="left">
            <li><a><%= link_to "Home", root_path %></a></li>
            <li><a><%= link_to "Posts", posts_path %></a></li>
            <li><a><%= link_to "Comments", comments_path %></a></li>   
    </ul>
    <body>
<div class="row">
  <% unless current_user %>
  <form action="<%= session_path %>" method="POST">
    <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />
  
      <div class="large-4 columns">
      

          <div class="small-9 columns">
            <input type="email" name="email" placeholder="Email" >
          </div>
  

          <div class="small-9 columns">
            <input type="password" name="password" placeholder="Password" >
          </div>

          <div class="small-2 columns">
            <button type="submit" class="button">Drink!</a></button>
            </div>
       </div>

      </form>
      <% else %>
      <form action="<%= session_path %>" method="POST">
        <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />
        <input name="_method" type="hidden" value="delete" />
        <button type="submit" class="button round tiny">Log Out as <%= current_user.name %></button>
      </form>
    </div>
    <% end %>
</div>

<%= yield %>





