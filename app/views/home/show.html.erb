<h2><%= @post.title %></h2>
<div class="row">
    <div class="large-10 column">

<h2>Leave a comment</h2>
<table>
<%= form_for [ @post.comments.build] do |f| %>
    <div class="field">
     <%= f.label :title %>
     <%= f.text_field :title %><br>
     <div>
     <%= f.label :avatar %><br>
     <%= f.file_field :avatar %><br>
    </div>
    <div class="field">
      <%= f.label :author_name %>
      <%= f.text_field :author_name %><br>
    </div>
    <div class="field">
      <%= f.label :author_email %>
      <%= f.text_field :author_email %><br>
    </div>
    <div class="field">
      <%= f.label :body %>
      <%= f.text_area :body %><br>
    </div>
</div>

</table>
    <p><%= f.submit "Add comment", class: "button round secondary small" %>
    </p>
<% end %>
<table>
      <thead>
        <tr>
          <th width="200">Author</th>
          <th>Email</th>
          <th>Body</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
  <% @post.comments.each do |comment| %>
  <tr>
      <td><%= comment.author_name %></td>
      <td><%= comment.author_email %></td>
      <td><%= comment.body %></td>
  <% end %>
  </tr>
</table>
</div>