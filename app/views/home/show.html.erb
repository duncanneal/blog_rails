<h2><%= @post.title %></h2>


<table>
      <thead>
        <tr>
          <th width="200">Author</th>
          <th>Email</th>
          <th>Body</th>
          <th colspan="3"></th>
        </tr>
      </thead>
     
  <% @post.comments.each do |comment| %>
  <tr>
      <td><%= comment.author_name %></td>
      <td><%= comment.author_email %></td>
      <td><%= comment.body %></td>
  <% end %>
  </tr>
</table>

